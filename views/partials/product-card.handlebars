<article class="product-card">
  <a class="product-link" href="/products/{{id}}">
    <figure class="product-thumb">
      <img src="{{images.[0]}}" alt="{{title}}" loading="lazy" />
      {{#if autoExtend}}
        <span class="badge badge-auto">Gia hạn tự động</span>
      {{/if}}
    </figure>
    <div class="product-body">
      <h3>{{title}}</h3>
      <p class="product-summary">{{summary}}</p>
      <dl class="product-meta">
        <div>
          <dt>Giá hiện tại</dt>
          <dd>{{formatCurrency currentPrice}}</dd>
        </div>
        <div>
          <dt>Bước giá</dt>
          <dd>{{formatCurrency bidStep}}</dd>
        </div>
        <div>
          <dt>Kết thúc</dt>
          <dd>{{relativeTime endDate}}</dd>
        </div>
      </dl>
    </div>
  </a>
  <footer class="product-footer">
    <div>
      <span class="label">Lượt ra giá:</span>
      <span>{{bidCount}}</span>
    </div>
    <div>
      <span class="label">Đang thắng:</span>
      <span>{{maskName highestBidder.name}}</span>
    </div>
    <div class="product-watch">
      <button
        type="button"
        class="watchlist-button{{#if isWatching}} is-watching{{/if}}"
        data-product-id="{{id}}"
        data-watch-state="{{#if isWatching}}watching{{else}}idle{{/if}}"
        aria-pressed="{{#if isWatching}}true{{else}}false{{/if}}"
        aria-label="{{#if isWatching}}Bỏ lưu {{title}}{{else}}Lưu {{title}} vào danh sách yêu thích{{/if}}"
      >
        <span class="watchlist-heart" aria-hidden="true">
          <svg viewBox="0 0 24 24" role="presentation" focusable="false">
            <path d="M12 21.35l-1.45-1.32C6 15.36 3 12.28 3 8.5 3 6 5 4 7.5 4c1.74 0 3.41 1 4.5 2.44C13.59 5 15.26 4 17 4c2.5 0 4.5 2 4.5 4.5 0 3.78-3 6.86-7.55 11.54L12 21.35z" />
          </svg>
        </span>
        <span class="watch-count">{{#if watchers}}{{watchers}}{{else}}0{{/if}}</span>
      </button>
    </div>
  </footer>
</article>
